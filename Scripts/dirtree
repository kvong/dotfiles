#################################

#initialize path
PATH=/bin:/usr/bin

#function to create tree
intoTree()
{
find $1 | grep -v "/\." | sed 's.[^/]*/.|-----.g' | sed 's.[^|]*|.     |.g' | sed 's/^[^|]*|/|/'
}

#if statement to check user input
[[ $# -eq 0 ]] && arg="." || arg="$1"
intoTree $arg

